<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tu.javafxtu.HelloController">
    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" style="-fx-font: 20 arial"/>
    <Group fx:id="group"/>
    <TextField fx:id="heightField" text="Enter height (in cm)"/>
    <TextField fx:id="weightField" text="Enter weight (in kg)"/>
    <Button text="Calculate BMI" onAction="#onCalculateBMIClick"/>
    <Button text="Calculate IBW" onAction="#onCalculateIBWClick"/>
    <Button text="Calculate LBW" onAction="#onCalculateLBWClick"/>

</VBox>
